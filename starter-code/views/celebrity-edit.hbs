<div>
  <h2>Edit Celebrity:</h2>
  <form action="/celeb/{{id}}/edit" method="POST">
  <div>
    <label for="">Name:</label>
    <input type="text" name="name" value="{{name}}">
  </div>
  <div>
    <label for="">Occupation:</label>
    <input type="text" name="occupation" value="{{occupation}}">
  </div>
  <div>
    <label for="">Catch Phrase:</label>
    <input type="text" name="catchPhrase" value="{{catchPhrase}}">
  </div>
  <div><button type="submit">DONE</button></div>
  </form>
</div>